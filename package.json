{
  "name": "zenai",
  "version": "1.0.0",
  "private": true,
  "description": "ZenAI - A smart AI chat assistant.",
  "author": "Zaen",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "marked": "^16.2.1"
  },
  "build": {
    "appId": "com.maszaen.zenai",
    "productName": "ZenAI",
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
